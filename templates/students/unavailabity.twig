{% extends "layout.twig" %}

{% block title %}Student Unavailability - {{ parent() }}{% endblock %}

{% block header_title %}Manage Student Unavailability{% endblock %}

{% block content %}
<div class="neumorphic-container">
    <h2 class="neumorphic-title-red">Manage Unavailability for {{ student.name }}</h2>
    <form action="{{ url_for('students.unavailability', {'id': student.id}) }}" method="POST" class="neumorphic-form">
        <div class="neumorphic-form-group">
            <label for="unavailability">Unavailable Dates</label>
            <input type="text" id="unavailability" name="unavailability" value="{{ student.unavailability|join(',') }}" class="neumorphic-input" placeholder="YYYY-MM-DD,YYYY-MM-DD,...">
            <small>Enter dates separated by commas (YYYY-MM-DD)</small>
        </div>
        <button type="submit" class="neumorphic-button">Update Unavailability</button>
    </form>
</div>
{% endblock %}
