{% extends "layout.twig" %}

{% block title %}Stand-up Feedback - {{ parent() }}{% endblock %}

{% block header_title %}Stand-up Feedback for {{ student.first_name }} {{ student.last_name }}{% endblock %}

{% block content %}
<div class="neumorphic-container">
    <h2 class="neumorphic-title-red">Stand-up Feedback Form</h2>
    <form action="{{ url_for('standup_feedback.submit') }}" method="POST" class="neumorphic-form">
        <input type="hidden" name="student_id" value="{{ student.id }}">
        
        <div class="neumorphic-form-group">
            <label for="date">Date:</label>
            <input type="date" id="date" name="date" required class="neumorphic-input">
        </div>

        <div class="neumorphic-form-group">
            <label for="achievements">Achievements:</label>
            <textarea id="achievements" name="achievements" required class="neumorphic-input"></textarea>
        </div>

        <div class="neumorphic-form-group">
            <label for="today_goals">Today's Goals:</label>
            <textarea id="today_goals" name="today_goals" required class="neumorphic-input"></textarea>
        </div>

        <div class="neumorphic-form-group">
            <label for="need_help">Do you need help?</label>
            <select id="need_help" name="need_help" required class="neumorphic-input">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </select>
        </div>

        <div class="neumorphic-form-group" id="problem_nature_group" style="display: none;">
            <label for="problem_nature">Nature of the problem:</label>
            <textarea id="problem_nature" name="problem_nature" class="neumorphic-input"></textarea>
        </div>

        <div class="neumorphic-form-group">
            <label for="other_remarks">Other Remarks:</label>
            <textarea id="other_remarks" name="other_remarks" class="neumorphic-input"></textarea>
        </div>

        <button type="submit" class="neumorphic-button">Submit Stand-up Feedback</button>
    </form>
</div>

<script>
document.getElementById('need_help').addEventListener('change', function() {
    var problemNatureGroup = document.getElementById('problem_nature_group');
    problemNatureGroup.style.display = this.value === '1' ? 'block' : 'none';
});
</script>
{% endblock %}